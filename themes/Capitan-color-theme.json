    "tokenColors": [
        {
            "name": "Comment",
            "scope": [
                "comment",
                "markup.quote.markdown",
                "meta.diff",
                "meta.diff.header"
            ],
            "settings": {
                "foreground": "#696969"
            }
        },
        {
            "name": "Dark Blue Grey",
            "scope": [
                "support.variable",
                "entity.name.tag.yaml",
                "constant.character.entity.html",
                "source.css entity.name.tag.reference",
                "beginning.punctuation.definition.list.markdown",
                "source.css entity.other.attribute-name.parent-selector",
                "markup.heading",
                "variable.language.this.js",
                "variable.language.special.self.python",
                "constant.other.caps.python",
                "support.type.python",
                "entity.other.attribute-name.pseudo-element.css"
                // "variable.parameter.js.jsx",

                // "variable.other.constant.js.jsx"
            ],
            "settings": {
                "foreground": "#c27cd8"
                // "foreground": "#4b7e7a"
            }
        },
        {
            "name": "Blue",
            "scope": [
                "constant",
                "support.class",
                "keyword.operator",
                "support.constant",
                "text.html.markdown string",
                "source.css support.function",
                "source.php support.function",
                "support.function.magic.python",
                "entity.other.attribute-name.id",
                "markup.deleted",
                "markup.bold",
                "constant.numeric",
                "meta.group.regexp",
                "constant.other.php",
                "support.constant.ext.php",
                "constant.other.class.php",
                "support.constant.core.php",
                "fenced_code.block.language",
                "entity.other.attribute-name",
                "support.type.exception.python",
                "source.css keyword.other.unit",
                "variable.other.object.property.js.jsx",
                "punctuation.definition.interpolation",
                "punctuation.section.embedded.end.php",
                "punctuation.section.embedded.end.ruby",
                "punctuation.section.embedded.begin.php",
                "punctuation.section.embedded.begin.ruby",
                "punctuation.definition.template-expression",
                "entity.name.tag",
                "meta.structure.dictionary.json support.type.property-name",
                "constant.numeric.css",
                "support.type.primitive.ts"
                // "meta.object-literal.key.js.jsx",

                // "variable.other.object.js",
            ],
            "settings": {
                "foreground": "#3f88c5"
            }
        },
        {
            "name": "Yellow",
            "scope": [
                "markup.list",
                "text.xml string",
                "entity.name.type",
                "support.function",
                "entity.other.attribute-name",
                "meta.at-rule.extend",
                "entity.name.function",
                "entity.other.inherited-class",
                "entity.other.keyframe-offset.css",
                "text.html.markdown string.quoted",
                "meta.function-call.generic.python",
                "meta.at-rule.extend support.constant",
                "entity.other.attribute-name.class.jade",
                "source.css entity.other.attribute-name",
                "text.xml punctuation.definition.string"
                // "meta.import.js.jsx",
            ],
            "settings": {
                "foreground": "#ffca43"
            }
        },
        {
            "name": "Red",
            "scope": [
                "storage",
                "keyword",
                "meta.link",
                "meta.image",
                "markup.italic",
                "source.js support.type",
                "entity.other.attribute-name.id.css",
                "punctuation.section.embedded.begin.js.jsx",
                "punctuation.section.embedded.end.js.jsx"
            ],
            "settings": {
                "foreground": "#d35551"
            }
        },
        {
            "name": "Orange",
            "scope": [
                "variable.parameter",
                "support.type.property-name.css",
                "variable.other.object.js.jsx"
                // "meta.structure.dictionary.json support.type.property-name"
            ],
            "settings": {
                "foreground": "#e49246"
            }
        },
        {
            "name": "Green",
            "scope": [
                "string",
                "text.html.php string",
                "markup.inline.raw",
                "markup.inserted",
                "punctuation.definition.string",
                "punctuation.definition.markdown",
                "text.html meta.embedded source.js string",
                "text.html.php punctuation.definition.string",
                "text.html meta.embedded source.js punctuation.definition.string",
                "text.html punctuation.definition.string",
                "text.html string"
                // "string.template.js"
            ],
            "settings": {
                "foreground": "#68ca68"
            }
        },
        {
            "name": "Cyan",
            "scope": [
                "constant.language.python",
                "constant.numeric",
                "variable.scss"
            ],
            "settings": {
                "foreground": "#28dae0"
            }
        },
        {
            "name": "Regular Text",
            "scope": [
                "variable.other.readwrite.js",
                "meta.template.expression.js",
                "meta.embedded.line.js",
                // "string.template.js",
                "meta.brace.square.js.jsx",
                "punctuation.separator.key-value.js.jsx"
            ],
            "settings": {
                "foreground": "#eee2c7"
            }
        },
        {
            "name": "Underline",
            "scope": ["entity.other.inherited-class"],
            "settings": {
                "fontStyle": "underline"
            }
        },
        {
            "name": "Italic",
            "scope": [
                "comment",
                "invalid",
                "keyword",
                "entity.other.attribute-name",
                // "meta.embedded.expression.js.jsx"
                "variable.other.object.js.jsx",
                "variable.scss",
                "variable.object.property.ts"
            ],
            "settings": {
                "fontStyle": "italic"
            }
        },
        {
            "name": "Bold",
            "scope": [
                "constant",
                "storage",
                "variable.language.special.self.python",
                "variable.language.this.js",
                "support.type.property-name.css",
                "meta.structure.dictionary.json support.type.property-name",
                "entity.name.tag.css",
                "punctuation.section.embedded.begin.js.jsx",
                "punctuation.section.embedded.end.js.jsx",
                "meta.import.js.jsx"
            ],
            "settings": {
                "fontStyle": "bold"
            }
        },
        {
            "name": "FontStyle Override",
            "scope": ["keyword.operator"],
            "settings": {
                "fontStyle": ""
            }
        }
    ]
}
